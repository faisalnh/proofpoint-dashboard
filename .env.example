# ===========================================
# ProofPoint Dashboard - Environment Variables
# ===========================================

# ===========================================
# Database (PostgreSQL)
# ===========================================
# Local app-to-db connection (non-docker local dev)
DATABASE_URL=postgresql://proofpoint:your-secure-password@localhost:5432/proofpoint
# Docker/compose-friendly DB vars
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=proofpoint
POSTGRES_USER=proofpoint
POSTGRES_PASSWORD=your-secure-password

# ===========================================
# NextAuth.js
# ===========================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key-min-32-chars
AUTH_TRUST_HOST=true
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ===========================================
# MinIO S3 Storage
# ===========================================
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=evidence

# ===========================================
# Email Service Configuration
# ===========================================
EMAIL_SERVICE=nodemailer
EMAIL_FROM=your-email@gmail.com
EMAIL_FROM_NAME=ProofPoint Dashboard

# Nodemailer SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Optional alternative provider key (currently not implemented in code path)
RESEND_API_KEY=

# Email behavior
# Set true only when SMTP credentials are valid and you want to send real emails
EMAIL_ENABLED=false
EMAIL_DEBUG=false

# Legacy Supabase (to be removed after migration)
NEXT_PUBLIC_SUPABASE_PROJECT_ID=mpnbpcegassmvshsahbp
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
NEXT_PUBLIC_SUPABASE_URL=https://mpnbpcegassmvshsahbp.supabase.co
